    <script>
      $(document).ready(function(){
    $(".once-only").click(function(){
        this.disabled = true;
        return true;
    });
});
        var GFG = document.getElementById("idAudio");
 
        function play_Audio() {
            GFG.play();
        }
 
        function pause_Audio() {
            GFG.pause();
        }
        function playSound(url) {
  const audio = new Audio(url);
  audio.play();
}



    </script>
 