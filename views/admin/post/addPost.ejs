 <%- include('../../partial/admin/header') %>

<div class="container">
  <h2>Add Post</h2>
  <div class="text-right">
    <a href="/admin/post" class="btn btn-primary">Back to Post</a>

</div>
<form method="POST" >
    <input type="text" name="q"/>
    <button type="submit" class="once-only" name="myButton">Send</button>
</form>
  <form action="/admin/post/createPost" method="POST" enctype="multipart/form-data">
   
   
    <div class="form-group">
      <label for="email">title:</label>
      <input type="text" class="form-control"  value="<%= title %>" name="title" id="title" />
    </div>
    <div class="form-group">
      <label for="email">slug:</label>
      <input type="text" class="form-control" value="<%= slug %>"  name="slug" id="slug" />
    </div>
    <div class="form-group">
      <label for="email">Content:</label>
      <textarea name="content" id="content" cols="50"  value="<%= content %>" rows="10"></textarea>
    </div>
    <div class="form-group">
      <label for="email">Image:</label>
      <input type="file" class="form-control" name="image" id="image" />
    </div>
    <button type="submit" class="btn btn-default">Submit</button>
   
   
  </form>
   <button onclick="play_Audio()" type="button">Play Audio</button>
    <button onclick="pause_Audio()" >Pause Audio</button>
   <button onclick="playSound('/image/success.mp3');" type="button">Play</button>
</div>
<%- include('../../partial/admin/footer') %>

 
   
    <audio id="idAudio">
        <source src=
"https://media.geeksforgeeks.org/wp-content/uploads/20190625153922/frog.mp3"
